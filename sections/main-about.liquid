<div class="about min-h-screen">
  {% render 'safe-space' %}

  <div class="md:p-4 p-2 flex flex-col md:flex-row gap-2  ">
    <div class=" w-full ">
      {%- for link in linklists['about-menu'].links -%}
        <h3 class=" select-none ">
          <a
            class=" hover:opacity-50 {%- if request.path == link.url -%}f opacity-50 hover:opacity-50 {%- endif -%}"
            href="{{ link.url }}"
          >
            {{- link.title -}}
          </a>
        </h3>
      {%- endfor -%}
    </div>

    <div class=" w-full ">
      <div class=" w-full ">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>
