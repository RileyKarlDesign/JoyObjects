<div
  style="background:{{section.settings.color}}"
  class=" js-section grid md:h-fit h-fit bg-opacity-50 md:grid-cols-2 grid-cols-1 md:gap-2  p-2 md:p-2 lg:p-4 pb-0 "
>
  <div class="w-full md:row-start-1 row-start-2 ">
    <div class=" pt-0 h-fit">
      <div class="h-fit pb-2">
        <h1 class="  md:w-[80%] w-full  uppercase ">{{ section.settings.title }}</h1>
      </div>
      <h3 class="md:w-[350px] pt-2  ">
        {{ section.settings.body }}
      </h3>

      {% if section.settings.link != '' %}
        <div class="pt-2">
          {% render 'button' with {% text:section.settings.cta , link:section.settings.link style:'blank' %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="w-full h-full overflow-hidden  pb-2 ">
    {{ section.settings.image | image_url: width: 1204 | image_tag: class: 'object-cover js-fade' }}
  </div>
</div>

{% schema %}
{
  "name": "Image & Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image One"
    },

    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body Text"
    },
    {
      "type": "text",
      "id": "custom-link",
      "label": "link"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "Call To Action"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Colour"
    }
  ],

  "presets": [
    {
      "name": "Image & Text ",
      "category": "Content"
    }
  ]
}
{% endschema %}
