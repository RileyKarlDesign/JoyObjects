
  

  

    <div  style='background:{{section.settings.color}}' class="grid sm:h-screen h-fit bg-opacity-50 sm:grid-cols-2 grid-cols-1 p-4 gap-2 ">
      <div class='w-full '>
        <div class='h-full   '>
          <div class='h-fit pb-4'>
            <h1 class='font-serif strech sm: w-[80%]  uppercase    '>
              {{ section.settings.title}}
            </h1>
          </div>
            <h2 class='font-sans text-xl uppercase leading-none  w-[80%] ' >
              {{ section.settings.body}}
