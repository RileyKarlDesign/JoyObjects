
  

  

    <div  style='background:{{section.settings.color}}' class=" js-section grid md:h-screen h-fit bg-opacity-50 md:grid-cols-2 grid-cols-1 p-4 gap-2 ">
      <div class='w-full '>
        <div class='h-full   '>
          <div class='h-fit pb-4'>
            <h1 class='font-serif strech md:w-[80%] w-full  uppercase    '>
              {{ section.settings.title}}
            </h1>
          </div>
            <h3 class='w-[80%]' >
              {{ section.settings.body}}
            </h3>

            {% if  section.settings.featured-product %}
            {% render 'button' with { text: 'View Product' , link: section.settings.featured-product.url } %}
            {% endif %}
          </div>
      </div>
      <div class='w-full h-full overflow-hidden'>
        <div class='object fit'> 
          {{ section.settings.image| img_url: '2048x' | img_tag }}
          </div>
      </div>
    </div>




   
 
  


