<div
  class="  flex flex-col justify-end items-end  relative z-10   transition-all p-4 overflow-hidden h-fit  "
  style="background:{{ settings.footer-background }};"
>
  {% render 'hr' %}
  <div class="flex flex-col md:flex-col    w-full justify-between  gap-0">
    {% render 'newsletter' %}

    <div class="flex justify-end pt-4">
      <div class=" h-fit grid grid-cols-1 w-[350px] gap-1">
        <div class="w-fit h-fit">
          <div class="w-full text-md menu-link font-sans   items-end gap-2">
            {% for link in linklists.footer.links %}
              <h3 class="">
                <a href="{{ link.url }}">{{ link.title }}</a>
              </h3>
            {% endfor %}
          </div>
        </div>

        <h3>—</h3>

        <div class="bottom h-fit">
          <h3><a href=""> Instagram </a></h3>
          <h3>Twitter</h3>
        </div>

        <h3>—</h3>

        <div class="bottom h-fit w-full">
          <h3>
            Joy Objects AB, Krukmakargatan <br>
            44, 117 26 Stockholm, Sweden
          </h3>
        </div>
      </div>
    </div>
  </div>

  {% comment %}
    <div class='  flex items-center justify-center ' >
            {{  shop.brand.logo | image_url: width: 700 | image_tag: class:'w-1/2 ' }}
    </div>
  {% endcomment %}

  <div class="  md:flex-row md:flex w-full mt-1 md:w-[350px] justify-between ">
    <div class="w-fit   ">
      <h3>©JOY Objects 2024</h3>
    </div>
  </div>
</div>
