<div
  style="background:{{section.settings.color}}"
  class=" js-section  md:h-screen h-fit bg-opacity-50  "
>
  <div class=" absolute top-2 w-full md:row-start-1  row-start-2  ">    <div class="h-full  p-4  ">
      {% if section.settings.product_1 != '' %}
        <div class="pt-2">
          {% render 'button' with {text: section.settings.cta , link: section.settings.product_1.url %}
        </div>
      {% endif %}
  </div>
  </div>
  <div class="w-full h-full overflow-hidden md:p-4 md:pr-4  p-4">
    {{ section.settings.image | image_url: width: 1204 | image_tag: class: ' object-cover w-full h-full js-fade' }}
  </div>


{% schema %}
{
  "name": "Full Width Image Block",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image One"
    },

    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body Text"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "Call To Action"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Colour"
    }
  ],

  "presets": [
    {
      "name": "Full Width Image Block",
      "category": "Content"
    }
  ]
}
{% endschema %}
