<div
  class=" js-section  p-2 md:p-2 lg:p-4 pb-1 "
>
  <div class="w-full flex justify-center items-center flex-col ">
    <h1 class="   heading-sans  md:text-5xl text-3xl text-center leading-none   ">{{ section.settings.title }}</h1>
    <p class="md:w-[550px] pt-1 text-center ">
      {{ section.settings.body }}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Title & Body",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "body",
      "label": "Body Text"
    }
  ],

  "presets": [
    {
      "name": "Title & Body "
    }
  ]
}
{% endschema %}
