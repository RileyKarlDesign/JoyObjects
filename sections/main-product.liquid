<div class="md:hidden w-full overflow-hidden ">
  {% render 'swiper' with { product: product } %}
</div>

<div class=" relative h-fit pb-40 ">
  <div class="js-product-info w-full h-fit flex md:w-full md:col-span-1 col-span-2 p-4 sticky top-0 z-40 snap-start ">
    <div class="  w-full ">
      <div class="js-product-title">
        <h3 class="text-serif">{{ product.title }}</h3>
        <h3 class="text-serif">{{ product.metafields.custom.range }}</h3>
      </div>

      <div class="js-product-description md:w-[350px]">
        <p class=" pb-4">{{ product.description }}</p>
        <ajax-cart-product-form>
          {% render 'add-to-cart-form' with current_variant: current_variant %}
        </ajax-cart-product-form>
      </div>
      <div class="flex flex-col gap-1 w-full pt-4 ">
        {% render 'atc-stick' %}
        <div class="js-product-description pt-4 flex-col flex gap-0">
          {% if product.metafields.custom.shipping != '' %}
            {% render 'accordian' with { title: 'Shipping', content: product.metafields.custom.shipping } %}
          {% endif %}
          {% if product.metafields.custom.size != '' %}
            {% render 'accordian' with { title: 'Dimnetions', content: product.metafields.custom.size } %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="js-product-gallery post-wrapper grid grid-cols-2 p-4 gap-4 w-screen    ">
    {% for image in product.images %}
      <div class="first-of-type:col-start-2 even:col-span-2 ">
        {{ image | image_url: width: 800 | image_tag: class: 'h-fit w-fit js-fade  ' }}
        <p class="caption h-4 ">{{ forloop.index }} / {{ forloop.length }}</p>
      </div>
    {% endfor %}
  </div>
</div>
