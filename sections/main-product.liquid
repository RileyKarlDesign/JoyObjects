
<div class='grid md:grid-cols-2 grid-cols-1   gap-2  md:p-2  p-0 '>
    <div class='post-wrapper transition-all flex md:flex-col md:h-auto h-[80vh] flex-row gap-2 overflow-y-scroll'>       
       
        {% for image in product.images %}      
                  {{ image | image_url: width: 700 | image_tag: class:'h-full w-fit ' }}         
        {% endfor %}
        
    </div>     

    {% comment %} imfo  {% endcomment %}

     <div class='  h-fit md:sticky top-1 p-4 flex flex-col items-center   md:pt-[20vh] pt-2'>
-
        <div class=" md:w-[80%] w-full  +fit ">
            <h1> {{ product.title }} </h1>
            <h1> {{ product.metafields.custom.range }} </h1>
            <p class='pb-4'> {{ product.description }} </p>
            <h1> {{ product.custom.dimentions_ }} </h1>
    
        <ajax-cart-product-form> 
            {% render 'add-to-cart-form' with current_variant: current_variant  %}
        </ajax-cart-product-form>

        </div>

        <div class="flex flex-col gap-1 md:w-[80%] w-full pt-4 ">
          
        {% render 'atc-stick' %} 

        <div class="pt-4 flex-col flex gap-1">
    
                {%  if product.metafields.custom.shipping != '' %}
                    {% render 'accordian' with { title: 'Shipping', content: product.metafields.custom.shipping } %}
                {% endif %}
                {%  if product.metafields.custom.size != '' %}
                    {% render 'accordian' with { title: 'Dimnetions', content: product.metafields.custom.size } %}
                {% endif %}
                
            </div>

          

        </div>
       
  


     </div>
    

</div>      


 

