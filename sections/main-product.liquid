

<div class=" relative min-h-screen" style='  background:{{ product.metafields.custom.page_colour }}'> 
    <div class=' aspect-main h-[40vh] p-2 flex gap-2 '>
        {% for image in product.images %}

                    {{ image | image_url: width: 700 | image_tag }}      
         
            {% endfor %}
    </div>      

<div class=' grid grid-cols-8  pb-6 p-2'> 
    <div class='col-span-3'>
        <h3 class=' pb-4 '>{{product.title}}</h3>
        <h3 class='' > {{ product.description }}
        {% render 'info-line' with { title: 'Width', value: product.metafields.custom.width  }  %}
            {% render 'info-line' with { title: 'Height', value: product.metafields.custom.height  }  %}
        {% render 'info-line' with { title: 'Legnth', value: product.metafields.custom.length }  %}
        </h3>

        <ajax-cart-product-form> 
        {% render 'add-to-cart-form' with current_variant: current_variant  %}
        </ajax-cart-product-form>

        {% render 'atc-stick' %} 

    </div>

    
</div>



        <div class="pb-4  pt-4 overflow-hidden hidden"> 

                        <!-- Slider main container -->
                        <div class="product-swiper">
                            <!-- Additional required wrapper -->
                            <div class="swiper-wrapper ">
                            <!-- Slides -->
                     
                            {% for image in product.images %}

                                <div class='swiper-slide flex justify-center '>
                                    <div class="object-contain"> 
                                    <div class='bg-stone-50  aspect-main  '>
                                        {{ image | image_url: width: 700 | image_tag }}      
                                    </div>      
                                        <p class='caption pl-2 pt-1 text-center absolute top-0 '> {{ forloop.index }} / {{ forloop.length }}  </p>            
                                    </div>
                                </div>
                    
                
                            {% endfor %}

                            </div>
                            <!-- If we need pagination -->
                            <div class="swiper-pagination"></div>
                        
                            <!-- If we need navigation buttons -->
                            {% comment %} <div class='bg-red-500'>
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div> {% endcomment %}
                            <!-- If we need scrollbar -->
                          
                        </div>



           
        </div>
        <div class=" flex flex-co gap-4 align-middle justify-center  " > 
           
             
        </div>
        
</div>
