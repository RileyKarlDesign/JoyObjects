<div class="my-cart bg-white  rounded-xl   z-[2000]  backdrop-blur-lg relative md:w-[390px] sm:w-full w-full ">
  <div class="md:p-1 p-4 ">
    <div class=" select-none absolute top-0 right-0 left-0 flex md:p-1 p-4 w-full z-50 justify-between items-end ">
      <h3>
        Cart (
        <span data-ajax-cart-bind="item_count" class="header__cart-quantity">
          {{ cart.item_count }}
        </span>
        )
      </h3>
      <h3 class="cart-btn">Close</h3>
    </div>

    <div class="  overflow-scroll h-full pb-10 pt-10  " data-ajax-cart-section>
      <div class="my-cart__items " data-ajax-cart-section-scroll>
        {% for line_item in cart.items %}
          {% render 'cart-card' with { product: line_item , index: forloop.index } %}
        {% endfor %}
      </div>
    </div>

    <div class=" cart-footer flex gap-2 justify-center align-middle absolute bottom-4  w-full ">
      {% form 'cart', cart, id: 'my-ajax-cart-form' %}
        <button
          class=" flex w-full h-el pl-4 pr-4 justify-center items-center bg-black bg-opacity-5  text-black rounded-sm  backdrop-blur-lg "
          type="submit"
          name="checkout"
        >
          <h3>Checkout</h3>
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %} { "name": "My Ajax cart" } {% endschema %}
