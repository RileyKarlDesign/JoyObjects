    
    {% render 'collection-header' with { collection: collection } %}



    
    <div class=' p-2'>  
        {% if collection.all_products_count > 0 %}

            {% if collection.title == 'Products' %}
                
                <div class='grid grid-flow-dense md:grid-cols-3 sm:grid-cols-3  grid-cols-1  gap-2  pb-2  '>     
                        
                {% for product in collection.products %}
                    {% render 'product-card'  with {product: product} %}
                {% endfor %}

                </div>

            {% else %}

                <div class='grid grid-flow-dense md:grid-cols-2 sm:grid-cols-2  xs:grid-cols-2 grid-cols-1 gap-2  pb-2  '>     
                            
                {% for product in collection.products %}
                    {% render 'product-card'  with {product: product} %}
                {% endfor %}

                </div>

            {% endif %}

            {% else %}
                
                <div class='flex align-center bg-stone-50 h-8 justify-center pt-20 pb-20  '>  
                <p> Nothing to see here yet </p>
                </div>
 
            {% endif %}
    </div>