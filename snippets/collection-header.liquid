{% comment %}  takes collection   {% endcomment %}




<div class="  h-fit flex  gap-2  p-2  overflow-hidden md:pt-2 pt-[40px]  ">


    {% if collection.title != 'Products' %}

            {% if collection.image  %}

                <div class=" md:w-1/2 w-full   ">
                    {{ collection.image  |  image_url: width: 700 | image_tag :  alt: collection.title, class: ' object-cover object-center  aspect-square md:w-auto w-full ' }}
                </div>
          
            {% endif %}

    {% endif %}

</div>



<div class="w-full p-2 z-40 pb-2 h-fit grid  sm:grid-cols-2  grid-cols-1 gap-2  ">
    <h2> {{ collection.title }} </h2>
    {{ collection.description}}
</div>
