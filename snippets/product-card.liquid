<div class=" group flex flex-col  relative pb-8  ">
<a href="{{ product.url }}" >
<div class=" relative overflow-hidden"> 
    {% if product.featured_image %}
        <div  class=' group-hover:opacity-0  h-fit rounded-sm  bg-opacity-50 overflow-hidden '>
            {{ product.featured_image | image_url: width: 700 | image_tag: class:'w-full' }}
        </div>
 
            <div class="  absolute inset-0 opacity-0 group-hover:opacity-100 ">{{ product.images[1] | image_url: width: 400 | image_tag }}</div>
       
    {% endif %}
</div>
<div class=' pt-1 '>
    <p> {{ product.title }} </p>
    <p> {{  product.metafields.custom.color }} </p>

    <div class="flex gap-2">
        <p class='opacity-50 '> {{ product.price | money }} </p>
        <p class='opacity-50 animate-blink ' > {{ product.compare_at_price | money_with_currency }} </p>
    </div>
</div>


</a>
</div>
