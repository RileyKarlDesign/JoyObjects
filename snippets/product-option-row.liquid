<!-- option  -->



<div class="product-option-row product-option-row-option grid  pt-1 pb-1 grid-cols-2 border-t-2 border-c2" >

  <label class="grey" for="{% if type == 'select' %}select-{{ option.name}}{% endif %}">
      {{ option.name }}
  </label>


  <div class="option-values">

    {% comment %}  option 1  {% endcomment %}

    {% assign e = '' %}

      {% for variant in product.variants %}
        {% for value in option.values %}
          

          {% if  value == variant.option1 %}

            {% if e != value %}

                {% assign radio_id = 'option-' | append: option_name | append: '-' | append: value | handleize %}
                  
                <div class="product-option ">

                      <input
                        class="variant-radio"
                        {% if forloop.index == 1 and variant.inventory_quantity > 0 %}
                        checked="checked"
                        {% endif %}
                        {% if variant.inventory_quantity <= 0 %}
                        disabled
                        {% endif %}
                        id="{{ radio_id }}"
                        type="radio"
                        name="{{ option_name }}"
                        value="{{ value }}"
                        {% if value == selected %}checked{% endif %}>

                      <label for="{{ radio_id }}">
                        {{ value }}
                      </label>

                </div>

              {%  assign e = value %}

            {% endif %}

          {% endif %}

          {% if  value == variant.option2 %}


                {% assign radio_id = 'option-' | append: option_name | append: '-' | append: value | handleize %}
                  
                <div class="product-option ">

                      <input
                        class="variant-radio"
                        {% if forloop.index == 1 and variant.inventory_quantity > 0 %}
                        checked="checked"
                        {% endif %}
                        {% if variant.inventory_quantity <= 0 %}
                        disabled
                        {% endif %}
                        id="{{ radio_id }}"
                        type="radio"
                        name="{{ option_name }}"
                        value="{{ value }}"
                        {% if value == selected %}checked{% endif %}>

                      <label for="{{ radio_id }}">
                        {{ value }}
                      </label>

                </div>

              {%  assign e = value %}

           

          {% endif %}



        {% endfor %}

        




      {% endfor %}

      

        


      
    
  </div>
</div>