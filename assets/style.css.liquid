/*  Cart  */


.body-wrap{
  background-color: white;
  overflow: scroll;
}

.body-inactive{
  opacity: .4;
}

.my-cart{
  position: fixed;
  right: -1000px;
  top: 7px;
  cursor: pointer;
  width: calc( 400px  );
  height: calc(100vh - 14px);
  transition: ease all 0.3s ;
  overflow: hidden;

}
 
.cart-open{

 width: calc( 400px  );
  height: calc(100vh - 14px);
  overflow: scroll;
  transition: ease all 0.3s ;
  right: 7px;
 
}

ajax-cart-product-form[processing]:before {
  content: 'Loading';
  display: block;
}

/* Make the "Add to cart" button look visually disabled while loading */
ajax-cart-product-form[processing] [type="submit"] {
  opacity: .7;
  cursor: not-allowed;
  pointer-events: none;
}

.my-cart__items {
  opacity: 1;
  transition: opacity .2s;
}

/* Make the cart content look visually disabled while updating */
html.js-ajax-cart-processing .my-cart__items {
  opacity: .7;
}

/* Show a loading indicator */
html.js-ajax-cart-processing .my-cart__items:before {
  content: 'Loading';
  display: block;
}


